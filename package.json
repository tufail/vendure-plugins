{
	"name": "vendure-plugins",
	"version": "1.0.0",
	"description": "Monorepo for different Vendure plugins",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "lerna run start"
	},
	"workspaces": [
		"packages/*"
	],
	"keywords": [
		"vendure",
		"vendure-plugins",
		"vendure-admin-plugins",
		"vendure-packages"
	],
	"author": "Mohammed Tufail <786tufail@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.11",
		"lerna": "^8.1.5",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.2",
		"prettier-plugin-astro": "^0.14.0",
		"rimraf": "^5.0.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.2",
		"typescript-eslint": "^7.14.1"
	},
	"lint-staged": {
		"*.{js,ts,css,less,scss,vue,json,gql,md,astro,yaml,yml,html,hbs,gitignore}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"scope-enum": [
				2,
				"always",
				[]
			]
		}
	}
}
